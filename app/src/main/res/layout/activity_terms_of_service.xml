<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Terms_of_service">

    <androidx.cardview.widget.CardView
        android:backgroundTint="#34F0EAD6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="40dp">

                <TextView
                    android:id="@+id/welcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="-5dp"
                    android:fontFamily="@font/roboto_condensed_light"
                    android:text="Terms of services"
                    android:textColor="@color/main"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </RelativeLayout>


            <ImageView
                android:id="@+id/notification"
                android:layout_width="22dp"
                android:onClick="backbtn"
                android:layout_height="22dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_baseline_arrow_back_ios_new_24"
                android:backgroundTint="@color/black" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="JCH Terms of services"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/updated_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="end"
        android:fontFamily="@font/roboto_condensed_light"
        android:textStyle="bold"
        android:text="Updated on: july 23,2022"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_condensed_light"
        android:text="Effective on: july 23,2022"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="40sp"
        android:layout_gravity="center"
        android:layout_marginEnd="20sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_condensed_light"
            android:text="jch Terms of services will be here!!!"/>

    </LinearLayout>



</LinearLayout>